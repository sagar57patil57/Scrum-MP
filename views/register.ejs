<% include ./header %>

<div class="container">
	<br><br>
    <h2 style="text-align:center;">Register Form</h2>
    <br>
    <div class="row">
      <div class="col-lg-4 col-md-10 mx-auto">

        <% if(errors){  for(var i=0 ; i<errors.length; i++) { %>

          <div class="alert alert-danger alert-dismissible">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <strong> <%= errors[i] %> </strong>
        </div>

        <% } } %>

        <form method="POST" action="/user/register">
          <div class="md-form">
            <input type="text" name="username" class="form-control" placeholder="UserName" id="username">
          </div>
          <div class="md-form">
            <input type="text" name="organization" class="form-control" placeholder="organization" id="organization">
          </div>
          <div class="md-form">
            <input type="email" name="email" class="form-control" placeholder="Email" id="email"  data-validation-required-message="Please enter the email.">
          </div>
          <div class="md-form">
              <input type="password" name="pwd" class="form-control" placeholder="Password" id="password"  data-validation-required-message="Please enter password.">
          </div>
          <div class="md-form">
            <button type="submit" class="btn" id="sendMessageButton">Register</button>
            <a style="float:right;" href="/user/login" id="sendMessageButton"><b>OR LOGIN</b></a>
          </div>
        </form>
        <a href="/" id="sendMessageButton">Back Home</a>
      </div>
    </div>
  </div>


  <% include ./footer %>